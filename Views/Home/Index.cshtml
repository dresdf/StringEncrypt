@{
    ViewData["Title"] = "String encryptor";
}

<div class="container">
    <div class="row">
        <div class="col-md-12" style="background-color:lightgrey; padding:5px;margin:5px;">
            <label>@ViewData["msg"]</label>
        </div>
    </div>
    <div class="row">

        <div class="col-md-6 col-md-offset-3">
            <form role="form" asp-controller="Home" asp-action="DoEncrypt" method="post">
                <fieldset>
                    <div class="form-group">
                        <input class="form-control" type="text" name="plainText" id="plainText" aria-label="plainText" autofocus required placeholder="Plain Text" />
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password" name="passPhrase" id="passPhrase" aria-label="passPhrase" required placeholder="Password" />
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <input class="btn btn-lg btn-success btn-block" type="submit" value="Encrypt" />
                            </div>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
        <div class="col-md-6 col-md-offset-3">
            <form role="form" asp-controller="Home" asp-action="DoDecrypt" method="post">
                <fieldset>
                    <div class="form-group">
                        <input class="form-control" type="text" name="cipherText" id="cipherText" aria-label="cipherText" autofocus required placeholder="Encrypted text" />
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password" name="passPhrase" id="passPhrase" aria-label="passPhrase" required placeholder="Password" />
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <input class="btn btn-lg btn-success btn-block" type="submit" value="Decrypt" />
                            </div>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>

    </div>
</div>
